@model InnovaTec.SisPol.Web1.Areas.Administracion.Models.TPuntoVentaViewModels
@{
    ViewBag.Title = "- Punto de Venta";
}
<h2>Punto de Venta</h2>
@using (Html.BeginForm("", "", new { Area = "Administracion" },
                                   FormMethod.Post, new { id = "frmTPuntoVenta", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.nptv_codigo, new { @class = "form-control" })
    @Html.HiddenFor(m => m.nptv_estreg, new { @class = "form-control" })
    <hr />
    <div class="alert alert-warning">
        @Html.ValidationSummary("", new { @class = "text-danger" })
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">Punto de Venta</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.cptv_nombre)
                        @Html.TextBoxFor(m => m.cptv_nombre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.cptv_nombre, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.cptv_RUC)
                        @Html.TextBoxFor(m => m.cptv_RUC, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.cptv_RUC, "", new { @class = "text-danger" })
                    </div>
                </div>                
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ccon_nrodni)
                        @Html.TextBoxFor(m => m.ccon_nrodni, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ccon_nrodni, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ccon_nombres)
                        @Html.TextBoxFor(m => m.ccon_nombres, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ccon_nombres, "", new { @class = "text-danger" })
                    </div>
                </div>                
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ccon_apepat)
                        @Html.TextBoxFor(m => m.ccon_apepat, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ccon_apepat, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ccon_apemat)
                        @Html.TextBoxFor(m => m.ccon_apemat, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ccon_apemat, "", new { @class = "text-danger" })
                    </div>
                </div>                
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.cptv_direccion)
                        @Html.TextBoxFor(m => m.cptv_direccion, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.cptv_direccion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.cptv_referencia)
                        @Html.TextBoxFor(m => m.cptv_referencia, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.cptv_referencia, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ccon_telefono)
                        @Html.TextBoxFor(m => m.ccon_telefono, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ccon_telefono, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ccon_celular)
                        @Html.TextBoxFor(m => m.ccon_celular, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ccon_celular, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ccon_email)
                        @Html.TextBoxFor(m => m.ccon_email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ccon_email, "", new { @class = "text-danger" })
                    </div>
                </div>                
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.nptv_estdato)
                        @Html.DropDownListFor(m => m.nptv_estdato, Model.Estado, "Seleccione", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.nptv_estdato, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="btn-group btn-group-justified">
                <a class="btn btn-default btn-primary" onclick="Guardar();" role="button"><i class="fa fa-save"></i>&nbsp;&nbsp;Guardar</a>
                <a class="btn btn-default btn-success" onclick="Nuevo();" role="button"><i class="fa fa-clone"></i>&nbsp;&nbsp;Nuevo</a>
                <a class="btn btn-default btn-default" onclick="Cancelar();" role="button"><i class="fa fa-reply"></i>&nbsp;&nbsp;Retornar</a>
            </div>
        </div>
    </div>
}
@section scripts {
    <script>

        $(function () {
            Globalize.culture('es-PE');
            //$("#fechaIngreso").datepicker.setDefaults($.datepicker.regional['es']);
            $("#dper_fecingreso").datepicker();
            //$('#fechaIngreso').datepicker('option', { dateFormat: 'dd/mm/yy' });
        });

        function Guardar() {
            if ($("#frmTPuntoVenta").valid()) {
                $.ajax({
                    url: '@Url.Action("GuardarJSON", "TPuntoVenta")',
                    type: 'POST',
                    data: $("#frmTPuntoVenta").serialize(),
                    success: function (result) {
                        data = result;
                        new PNotify({
                            title: data.Title,
                            text: data.Message,
                            type: data.TypeMessage
                        });
                        if (result.Succeeded) {
                            //$('#dlgDerivacionDocumento').modal('hide');
                            $('#nptv_codigo').val(data.Data);
                        }
                    }
                });
            }
        };
        function Nuevo() {
            var url = '@Url.Action("TPuntoVenta", "TPuntoVenta", new { area = "Administracion" })';
            document.location.href = url + "?codigo=0";
        };
        function Cancelar() {
            var url = '@Url.Action("Index", "TPuntoVenta", new { area = "Administracion" })';
            document.location.href = url;
        };
    </script>
}